<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.drawable.maneater.MainActivity">

        <com.drawable.maneater.shimmer.LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:s_auto_start="true">

            <include layout="@layout/inner_layout" />

        </com.drawable.maneater.shimmer.LinearLayout>

        <com.drawable.maneater.shimmer.LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:s_auto_start="true"
            app:s_base_alpha="0.7"
            app:s_duration="800"
            app:s_repeat_count="-1"
            app:s_repeat_mode="reverse">

            <include layout="@layout/inner_layout" />

        </com.drawable.maneater.shimmer.LinearLayout>

        <com.drawable.maneater.shimmer.LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <include layout="@layout/inner_layout" />

        </com.drawable.maneater.shimmer.LinearLayout>

        <com.drawable.maneater.shimmer.LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <include layout="@layout/inner_layout" />

        </com.drawable.maneater.shimmer.LinearLayout>

        <com.drawable.maneater.shimmer.LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <include layout="@layout/inner_layout" />

        </com.drawable.maneater.shimmer.LinearLayout>

        <com.drawable.maneater.shimmer.LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <include layout="@layout/inner_layout" />

        </com.drawable.maneater.shimmer.LinearLayout>

        <com.drawable.maneater.shimmer.LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <include layout="@layout/inner_layout" />

        </com.drawable.maneater.shimmer.LinearLayout>

        <com.drawable.maneater.shimmer.LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <include layout="@layout/inner_layout" />

        </com.drawable.maneater.shimmer.LinearLayout>


    </LinearLayout>
</ScrollView>


